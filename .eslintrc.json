{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb", "eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
          "spread": true
        }
    },
    "rules": {
        "indent": ["warn", 4, {
            "SwitchCase": 1
        }],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": "off",
        "no-undef": "off",
        "accessor-pairs": [
            "error",
            {
                "getWithoutSet": true
            }
        ],
        "array-callback-return" : "error",
        "consistent-return" : "error",
        "no-extra-boolean-cast": "off",
        "no-mixed-spaces-and-tabs": "warn"
    }
}
